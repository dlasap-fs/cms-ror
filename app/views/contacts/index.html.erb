<p style="color: green"><%= notice %></p>

<div style="display: flex; width: 100%; height: 100%; justify-content: space-between; align-items:center;">
  <h1>Contacts List</h1>
  <div>
    <%= link_to "Add New Contact", new_contact_path, class:"btn btn-success " %>
  </div>
</div>


<div id="contacts">
  <table class="table table-striped table-bordered table-hover">
      <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Physical Address</th>
        <th>Billing Address</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
     <% @contacts.each do |contact| %>
    <%#= render contact %>
    <!--
    <div>
      <%= contact.first_name%>
      <%= contact.last_name%>
      <%= contact.physical_address%>
      <%= contact.billing_address%>
      </div>
    -->
    <tr>
      <td><%= link_to contact.first_name + ' ' + contact.last_name, contact %></td>
      <td><%= contact.email%> </td>
      <td><%= contact.physical_address%> </td>
      <td><%= contact.billing_address%> </td>

      <td> <%= link_to "Show", contact, class:"btn btn-outline-info btn-sm"%>
        <%= link_to "Edit", edit_contact_path(contact), class:"btn btn-outline-primary btn-sm"%>
      <%= link_to "Delete ", contact, method: :delete, data:{
        confirm: "Are you sure?"
      }, class:"btn btn-outline-danger btn-sm" %></td>
      </tr>

    <% end %>

     </tbody>
  </table>

</div>


